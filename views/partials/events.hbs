<div class="col-md-4">
  <div class="card">
    <img class="card-img-top" alt="Bootstrap Thumbnail First" src="{{this.path}}" alt={{this.originalName}} />
    <div class="card-block">
      <h5 class="card-title">
        {{this.title}}
      </h5>
      <h6>
        Organizer: {{this.name}}
      </h6>
      <p class="card-text">
        {{this.date}}
      </p>
      <p class="card-text">
        {{this.city}}/{{this.state}}
      </p>
      <p class="card-text">
        {{this.address}}
      </p>      
      <h5>Description</h5>
      <p class="card-text">
        {{this.description}}
      </p>      
      <p>
        <a class="btn btn-primary" href="http://{{this.link}}">Buy</a> <a class="btn" href="mailto:{{this.email}}">Contact</a>
      </p>
    </div>
  </div>
</div>